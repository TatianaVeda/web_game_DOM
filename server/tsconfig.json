{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "../" // Важно: чтобы shared и server были внутри rootDir
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
} 